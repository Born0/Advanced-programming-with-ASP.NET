﻿@model Ch24ShoppingCartMVC.Models.CartViewModel
@{ ViewBag.Title = "Cart"; }
@section css {
    <link href="~/Content/Cart.css" rel="stylesheet" />
}
<h2>Your Shopping Cart</h2>
@if (Model.Cart == null || !Model.Cart.Any())
{
<p>Please select products from order page, nothing selected !</p> }
else
{
<select multiple="multiple">
    @foreach (var item in @Model.Cart)
    {
<option>@item.Display()</option>
}
</select>
                <br />
}
@using (Html.BeginForm("Index", "Checkout", FormMethod.Post))
{

<input type="submit" id="btnAdd" value="Checkout" />
@*<input type="submit" id="btnRemove" value="Empty Cart" />*@
}
